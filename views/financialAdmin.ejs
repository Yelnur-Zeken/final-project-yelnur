<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Financial Data</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include Bootstrap CSS -->

<!-- Include required JS libraries (jQuery, Popper.js, and Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Financial Data</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Photo Gallery Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/newsAdmin">News</a>
                </li>
            </ul>
        </div>
    </nav>
  <div class="container">
    <h1>Financial Data: AAPL</h1>
    <canvas id="financialChart" width="800" height="400"></canvas>
  </div>
  <footer class="text-center mt-5 py-3" style="background-color: #007bff; color: white;">
    <p>Yelnur Zekenov BDA-2305</p>
    </footer>
  <script>
    const financialData = <%- JSON.stringify(financialData) %>;

    const labels = financialData.map(data => data.time);
    const prices = financialData.map(data => data.close);

    const ctx = document.getElementById('financialChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'AAPL Closing Prices',
          data: prices,
          borderColor: 'rgba(75, 192, 192, 1)',
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
        }]
      }
    });
  </script>
</body>
</html>
